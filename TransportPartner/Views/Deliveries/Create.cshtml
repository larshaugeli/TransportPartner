@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using TransportPartner.ViewModels
@model TransportPartner.Models.Delivery

@{
    ViewData["Title"] = "Create";
}

<h4>Opprett levering</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DeliveryDate" class="control-label"></label>
                <input asp-for="DeliveryDate" class="form-control" />
                <span asp-validation-for="DeliveryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Postcode" class="control-label"></label>
                <input asp-for="Postcode" class="form-control" />
                <span asp-validation-for="Postcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarUsed" class="control-label"></label>
                <select asp-for="CarUsed" class="form-control" asp-items="ViewBag.CarUsed">
                    <option value="">-- Velg firmabil --</option>
                </select>
                <span asp-validation-for="CarUsed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Items" class="control-label"></label>
                <select id="selectItem" name="items" asp-for="Items" multiple="multiple" class="form-control" asp-items="ViewBag.Item" >
                    <option value="">-- Velg varer --</option>
                </select>
                <span asp-validation-for="Items" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee" class="control-label"></label>
                <select asp-for="Employee" class="form-control" asp-items="ViewBag.Employee">
                    <option value="">-- Velg sjåfør --</option>
                </select>
                <span asp-validation-for="Employee" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Delivered" /> @Html.DisplayNameFor(model => model.Delivered)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Opprett" class="btn btn-primary" />
            </div>
            </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tilbake til Leveringer</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
